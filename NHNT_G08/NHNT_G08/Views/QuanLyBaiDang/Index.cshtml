
@section Style {
    <link rel="stylesheet" href="~/css/quanlybaidang.css" />
}

@model List<NHNT_G08.Models.Phong>

<div class="main">
    <h1 class="title">Quản lý bài đăng thuê trọ</h1>
    <div class="grid item">

        <table>
            <tr>
                <th>STT</th>
                <th>Họ tên người đăng bài</th>
                <th>Số điện thoại</th>
                <th>Thông tin phòng trọ</th>
                <th>Trạng thái phòng</th>
                <th>Trạng thái bài đăng</th>
                <th>Tác vụ</th>
            </tr>

            @foreach (var baidang in Model)
            {
                
                <tr>
                    <td>1</td>
                    <td>@baidang.tenNguoiDang</td>
                    <td>@baidang.soDienThoai</td>
                    <td>
                        <span>Tên phòng :@baidang.tenPhong</span><br>
                        <span>Địa chỉ :@baidang.diaChi</span><br>
                        <span>Giá phòng : @baidang.giaPhong</span><br>
                        <span>Giá điện : @baidang.giaDien</span><br>
                        <span>Giá nước : @baidang.giaNuoc</span><br>
                        <span>Diện tích :@baidang.dienTich</span>
                    </td>

                    <td>@baidang.trangThaiPhong</td>
                    <td>@baidang.trangThaiBaiDang</td>
                    <td>
                        <button class="btn btn_duyet">Duyệt bài</button>
                        <button class="btn btn_huy">Hủy bài</button>
                    </td>
                 </tr>

              }

                
            </table>



    </div>
</div>
