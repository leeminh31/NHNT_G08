
@model NHNT_G08.Models.TaiKhoan
@section Style {
<link rel="stylesheet" href="~/css/dangnhap.css" />
}
<!-- Phần thân trang web -->
<div class="main">
    <div class="form_dangnhap">
        <p class="form_dangnhap-title">ĐĂNG NHẬP</p>
        <form asp-action="Login" asp-controller="Login" method="post">
            <div class="form_dangnhap-item">
                <label class="form_dangnhap-item-label" for="">Tên tài khoản</label>
                <input type="text" name="taikhoan" id="taikhoan" class="form_dangnhap-item-input" placeholder="  Email">
                <label id="dn_loi_email" style="margin-top: 10px; color: red"></label>
            </div>

            <div class="form_dangnhap-item">
                <label class="form_dangnhap-item-label" for="">Mật khẩu</label>
                <input type="password" name="matkhau" id="matkhau" class="form_dangnhap-item-input" placeholder="  Nhập mật khẩu">
                <p id="dn_loi_mk" style="margin-top: 10px; color: red"></p>
            </div>

@* 
            <div class="form_dangnhap-show">
                <input type="checkbox" class="">
                <label class="form_dangnhap-item-label" for="">Hiện thị mật khẩu</label>

            </div> *@

            <div class="form_dangnhap-btn">
                <button type="button" class="btn btn_dangnhap" asp-action="Login" type="submit" id="btn_dangnhap"> Đăng nhập
                </button>
            </div>

            <label class="form_dangnhap-item-label" style="margin-left: 50px;" for="">Nếu bạn chưa có tài khoản, đăng kí <a href="@Url.Action("Index", "Register")" >tại đây</a></label>
        </form>
    </div>
</div>